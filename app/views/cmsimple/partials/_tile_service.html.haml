%article.tile.tile-service
  %a.tile-toggle(href="##{title.parameterize}")
  %section.tile-cube
    .tile-front
      %header.tile-header
        %div.tile-icon
        %h2.tile-heading= title

  %section.tile-content
    %a.btn-close(href="#close") &times;
    %article.block-article
      %header.block-header
        %h1.block-heading= title
        %h2.block-subheading This is a service

      %section.block-content
        .block-only
          %p= lorem_ipsum 4
          %p= lorem_ipsum 2

