%article.tile.tile-service
  %a.tile-toggle(href="##{title.parameterize}")
  %section.tile-cube
    .tile-front
      %header.tile-header
        %div.tile-icon
        %h2.tile-heading= title

  %section.tile-content
    %a.btn-close(href="#close") &times;
    %article.block-article
      %header.block-header
        %h1.block-heading(id="block_heading_#{index}" data-mercury="full")><
          = render_region "block_heading_#{index}" do
            = title

        %h2.block-subheading(id="block_subheading_#{index}" data-mercury="full")><
          = render_region "block_subheading_#{index}" do
            This is a service

      %section.block-content
        %div.block-only
          %div(id="block_copy_#{index}" data-mercury="full")><
            = render_region "block_copy_#{index}" do
              = lorem_ipsum 4

