%article.tile.tile-work
  %a.tile-toggle(href="##{title.parameterize}")
  %section.tile-cube
    .tile-front
      %header.tile-header
        %h2.tile-heading= title
        %p.tile-tagline Creative Concept, UI Design
        %div.btn-cta View Work

  %section.tile-content
    %a.btn-close(href="#close") &times;
    %article.block-article
      %header.block-header
        %h1.block-heading(id="block_heading_#{index}" data-mercury="full")><
          = render_region "block_heading_#{index}" do
            = title

        %h2.block-subheading(id="block_subheading_#{index}" data-mercury="full")><
          = render_region "block_subheading_#{index}" do
            This is a work section

      %section.block-content
        %div.block-details
          %div(id="block_copy_#{index}" data-mercury="full")><
            = render_region "block_copy_#{index}" do
              = lorem_ipsum 4

        %div.block-showcase
          %section.carousel(data-bindable="carousel-touch" role="presentation" data-keyboard="false")
            %section.carousel-inner
              - (["666666", "ff00ff", "ff0000", "00ffff"]).each do |i|
                %article.carousel-panel
                  %figure.carousel-figure
                    %img(src="http://placehold.it/600x400/#{i}/ffffff" alt="image")

