%article.tile.tile-work
  %a.tile-toggle(href="##{title.parameterize}")
  %section.tile-cube
    .tile-front
      %header.tile-header
        %h2.tile-heading= title
        %p.tile-tagline Creative Concept, UI Design
        %div.btn-cta View Work

  %section.tile-content
    %a.btn-close(href="#close") &times;
    %article.block-article
      %header.block-header
        %h1.block-heading= title
        %h2.block-subheading This is a work section

      %section.block-content

