%article.tile.tile-case
  %a.tile-toggle(href="##{title.parameterize}")
  %section.tile-cube
    .tile-front(data-img="fpo/tile-qdoba.jpg")
      %header.tile-header
        %h2.tile-heading= title
        %p.tile-tagline User Experience, UI Design
      %div.tile-crop

  %section.tile-content
    %a.btn-close(href="#close") &times;
    %article.block-article
      %header.block-header
        %h1.block-heading= title
        %h2.block-subheading This is a case study

      %section.block-content
        %div.block-details
          %h3.content-heading Challenge
          %p= lorem_ipsum 4

          %h3.content-heading Solution
          %p= lorem_ipsum 6

          %blockquote
            %p<
              &#8220;#{lorem_ipsum(3)}&#8221;
              <small>David Craven / <cite title="www.qdoba.com">CMO Qdoba Mexican Grill</cite></small>

        %div.block-showcase
          %section.carousel(data-bindable="carousel-touch" role="presentation")
            %section.carousel-inner
              - (["ff00ff", "00ffff", "ff0000", "666666"]).each do |i|
                %article.carousel-panel
                  %figure.carousel-figure
                    %img(src="http://placehold.it/600x400/#{i}/ffffff" alt="image")

